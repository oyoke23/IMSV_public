<resources>
    <style name="Theme.Imsv" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="colorPrimary">@color/white</item>

        <item name="colorPrimaryVariant">@color/violet_200</item>

        <item name="colorOnPrimary">@color/purple_1000</item>

        <item name="colorSecondary">@color/purple_500</item>

        <item name="colorSecondaryVariant">@color/purple_700</item>

        <item name="colorOnSecondary">@color/purple_900</item>

        <item name="android:windowBackground">?attr/colorPrimary</item>
        <item name="android:colorBackground">?attr/colorPrimary</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="CustomRadioButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:backgroundTint">@drawable/radiobutton_background_color</item>
        <item name="android:textColor">@drawable/radiobutton_text_color</item>
        <item name="android:fontFamily">@font/louis_george_cafe_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomMaterialCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="android:fontFamily">@font/louis_george_cafe_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="strokeColor">?attr/colorOnPrimary</item>
        <item name="strokeWidth">2dp</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardBackgroundColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="CustomActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/purple_translucent</item>
    </style>

    <style name="Theme.Imsv.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>